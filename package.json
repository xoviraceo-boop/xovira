{
  "name": "xovira",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=web",
    "dev:socket": "turbo run dev --filter=socket-server",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:socket": "turbo run build --filter=socket-server",
    "db:generate": "cd packages/database && pnpm prisma generate",
    "db:push": "cd packages/database && pnpm prisma db push",
    "db:studio": "cd packages/database && pnpm prisma studio",
    "db:migrate": "cd packages/database && pnpm prisma migrate dev",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "webhook-processor": "ts-node scripts/webhook-processor.ts"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}